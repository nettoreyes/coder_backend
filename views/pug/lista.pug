hmtl
    head 
        title='Plantilla Pug js'
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    body       
        div(class="container")
            h2(class="my-4") Productos
            a(href="http://localhost:8080/" class="btn btn-primary" tabindex="-1" role="button") Crear Producto
            
            if hayProductos
                div(class="table-responsive")
                    table(class="table")
                        thead
                            tr
                                th(scope="col") #
                                th(scope="col") Nombre
                                th(scope="col") Precio
                                th(scope="col") Imagen
                        tbody
                            each item in productos
                                tr
                                    th(scope="row")=item.id 
                                    td=item.title
                                    td=item.price
                                    td
                                        img(src=item.thumbnail class="img-thumbnail" width="200" height="100")
            else
                div(class="alert alert-danger my-4" role="alert") No hay Productos!!!      